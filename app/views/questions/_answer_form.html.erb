<div class="well">
  <p class="lead">
    Your Answer
  </p>
  <%= form_for [@question, @answer] do |f| %>
    <% if @answer.errors.any? %>
      <div id="error_explanation">
        <h2>
          Yikes! There are
          <%= pluralize(@answer.errors.count, "error") %>
          you need to fix:
        </h2>
        <ul>
          <% @answer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :description, class: "sr-only" %>
      <%= f.text_area :description, cols: 92, rows: 15, class: "form-control" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-default btn-lg" %>
  <% end %>
</div>
