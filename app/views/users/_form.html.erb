<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        Yikes! There are
        <%= pluralize(@user.errors.count, "error") %>
        you need to fix:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
